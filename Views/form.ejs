<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Professional Registration Form</title>
  <link rel="stylesheet" href="/output.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Inter:wght@400;500;600&family=Dancing+Script:wght@400;500;600;700&family=Creepster&display=swap" rel="stylesheet">
  <style>
    @keyframes slideInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    .animate-slide-up { animation: slideInUp 0.6s ease-out; }
    .animate-fade-in { animation: fadeIn 0.8s ease-out; }
    .section-card { transition: all 0.3s ease; }
    .section-card:hover { transform: translateY(-2px); box-shadow: 0 20px 40px rgba(0,0,0,0.1); }
  </style>
</head>
<body class="min-h-screen py-8 px-4" style="background: radial-gradient(circle, rgba(209, 130, 163, 1) 23%, rgba(148, 187, 233, 1) 100%);">
  <div class="max-w-4xl mx-auto">
    <form action="/submit" method="POST" onsubmit="return validateForm()">
      <% if (typeof error !== 'undefined') { %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-r-lg animate-slide-up mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-700 font-medium"><%= error %></p>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Single Combined Card with Header -->
      <section class="section-card bg-gray-100/60 shadow-xl border border-white/60 animate-slide-up p-6" style="clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);">
        
        <!-- Header Section -->
        <div class="bg-white/70 p-6 sm:p-8 rounded-lg shadow-sm mb-4">
          <div class="text-center">
            <h1 class="text-3xl sm:text-4xl font-bold mb-2" style="font-family: 'Courgette', cursive; background: linear-gradient(to right, #d21765, #94bbe9); -webkit-background-clip: text; background-clip: text; color: transparent; letter-spacing: 2px;">
              Your Details
            </h1>
            <p class="text-gray-600 text-sm sm:text-base">Complete your profile to get started</p>
            <div class="w-24 h-1 mx-auto mt-4 rounded-full" style="background: linear-gradient(to right, #d182a3, #94bbe9);"></div>
          </div>
        </div>

        <!-- Personal Information -->
        <div class="bg-white/70 p-6 sm:p-8 rounded-lg shadow-sm mb-4">
          <div class="text-center mb-6">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2" style="font-family: 'Dancing Script', cursive;">Personal Information</h2>
            <p class="text-gray-600 text-sm">Tell us about yourself</p>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
            <div>
              <label for="firstName" class="block text-sm font-semibold text-gray-700 mb-2">First Name *</label>
              <input id="firstName" name="firstName" type="text" placeholder="Enter your first name" required oninput="validateField('firstName')" 
                     class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200 hover:border-gray-300" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);">
              <div id="firstNameError" class="mt-1 text-sm text-red-500" style="display: none;"></div>
            </div>

            <div>
              <label for="middleName" class="block text-sm font-semibold text-gray-700 mb-2">Middle Name</label>
              <input id="middleName" name="middleName" type="text" placeholder="Enter your middle name (optional)" 
                     class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200 hover:border-gray-300" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);">
            </div>

            <div class="sm:col-span-2">
              <label for="lastName" class="block text-sm font-semibold text-gray-700 mb-2">Last Name *</label>
              <input id="lastName" name="lastName" type="text" placeholder="Enter your last name" required oninput="validateField('lastName')" 
                     class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200 hover:border-gray-300" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);">
              <div id="lastNameError" class="mt-1 text-sm text-red-500" style="display: none;"></div>
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2" style="font-family: 'Pacifico', cursive;">Email Address *</label>
              <input id="email" name="email" type="email" placeholder="your.email@example.com" required oninput="validateField('email')" 
                     class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200 hover:border-gray-300" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);">
              <div id="emailError" class="mt-1 text-sm text-red-500" style="display: none;"></div>
            </div>

            <div>
              <label for="password" class="block text-sm font-semibold text-gray-700 mb-2" style="font-family: 'Pacifico', cursive;">Password *</label>
              <input id="password" name="password" type="password" placeholder="Create a secure password" required oninput="checkPasswordStrength()" 
                     class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200 hover:border-gray-300" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);">
              <div id="passwordMeter" class="mt-2" style="display: none;">
                <div class="flex items-center gap-2 mb-2">
                  <div class="flex-1 h-2 bg-gray-200 rounded-full overflow-hidden">
                    <div id="strengthBar" class="h-full transition-all duration-300 rounded-full" style="width: 0%; background-color: #ef4444;"></div>
                  </div>
                  <span id="strengthText" class="text-sm font-medium text-red-500">Weak</span>
                </div>
              </div>
              <div id="passwordError" class="mt-1 text-sm text-red-500" style="display: none;"></div>
            </div>

            <div>
              <label for="confirmPassword" class="block text-sm font-semibold text-gray-700 mb-2" style="font-family: 'Pacifico', cursive;">Confirm Password *</label>
              <input id="confirmPassword" name="confirmPassword" type="password" placeholder="Re-enter your password" required oninput="checkPasswordMatch()" 
                     class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-200 hover:border-gray-300" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);">
              <div id="confirmPasswordError" class="mt-1 text-sm text-red-500" style="display: none;"></div>
            </div>

            <div class="sm:col-span-2">
              <label class="block text-sm font-semibold text-gray-700 mb-3" style="font-family: 'Pacifico', cursive;">Gender *</label>
              <div class="flex flex-wrap gap-4">
                <label class="flex items-center cursor-pointer group">
                  <input type="radio" id="male" name="gender" value="male" required class="w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500 focus:ring-2 mr-2">
                  <span class="text-gray-700 group-hover:text-blue-600 transition-colors">Male</span>
                </label>
                <label class="flex items-center cursor-pointer group">
                  <input type="radio" id="female" name="gender" value="female" class="w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500 focus:ring-2 mr-2">
                  <span class="text-gray-700 group-hover:text-blue-600 transition-colors">Female</span>
                </label>
                <label class="flex items-center cursor-pointer group">
                  <input type="radio" id="other" name="gender" value="other" class="w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500 focus:ring-2 mr-2">
                  <span class="text-gray-700 group-hover:text-blue-600 transition-colors">Other</span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <!-- Professional Information -->
        <div class="bg-white/70 p-6 sm:p-8 rounded-lg shadow-sm mb-4">
          <div class="text-center mb-6">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2" style="font-family: 'Dancing Script', cursive;">Professional Information</h2>
            <p class="text-gray-600 text-sm">Your academic and career details</p>
          </div>

          <div class="space-y-6">
            <div>
              <label for="department" class="block text-sm font-semibold text-gray-700 mb-2" style="font-family: 'Pacifico', cursive;">Department *</label>
              <select id="department" name="department" required 
                      class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all duration-200 hover:border-gray-300" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);">
                <option value="">Select your department</option>
                <option value="cse">Computer Science & Engineering</option>
                <option value="it">Information Technology</option>
                <option value="ece">Electronics & Communication</option>
                <option value="mech">Mechanical Engineering</option>
                <option value="civil">Civil Engineering</option>
                <option value="agri">Agriculture Engineering</option>
                <option value="aiml">AI/ML Engineering</option>
              </select>
            </div>

            <div>
              <label for="semester" class="block text-sm font-semibold text-gray-700 mb-2" style="font-family: 'Pacifico', cursive;">Current Semester *</label>
              <select id="semester" name="semester" required 
                      class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all duration-200 hover:border-gray-300" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);">
                <option value="">Select your semester</option>
                <option value="1">1st Semester</option>
                <option value="2">2nd Semester</option>
                <option value="3">3rd Semester</option>
                <option value="4">4th Semester</option>
                <option value="5">5th Semester</option>
                <option value="6">6th Semester</option>
                <option value="7">7th Semester</option>
                <option value="8">8th Semester</option>
              </select>
            </div>

            <div>
              <label for="skills" class="block text-sm font-semibold text-gray-700 mb-2" style="font-family: 'Pacifico', cursive;">Skills *</label>
              <textarea id="skills" name="skills" rows="3" placeholder="List your technical and soft skills (e.g., Python, JavaScript, Communication, Leadership...)" required 
                        class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all duration-200 hover:border-gray-300 resize-none" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);"></textarea>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 mb-2" style="font-family: 'Pacifico', cursive;">Professional Summary *</label>
              <textarea id="message" name="message" rows="4" placeholder="Tell us about your experience, skills, and career goals..." required 
                        class="w-full px-4 py-3 border-2 border-gray-200 bg-white focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-200 transition-all duration-200 hover:border-gray-300 resize-none" style="font-family: 'Inter', sans-serif; clip-path: polygon(10px 0%, 100% 0%, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0% 100%, 0% 10px);"></textarea>
            </div>
          </div>
        </div>

        <!-- Terms and Submit -->
        <div class="bg-white/70 p-6 sm:p-8 rounded-lg shadow-sm">
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input id="agree" name="agree" type="checkbox" required 
                       class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
              </div>
              <div class="ml-3 text-sm">
                <label for="agree" class="text-gray-700" style="font-family: 'Pacifico', cursive;">
                  I agree to the <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">Terms of Service</a> and 
                  <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">Privacy Policy</a> *
                </label>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
              <button type="button" onclick="resetForm()" 
                      class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:scale-105 border border-gray-300" style="font-family: 'Inter', sans-serif;">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Reset Form
              </button>
              <button type="submit" 
                      class="flex-1 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl" style="font-family: 'Inter', sans-serif; background: linear-gradient(to right, #d182a3, #94bbe9);" onmouseover="this.style.background='linear-gradient(to right, #c16d92, #7ba8e0)'" onmouseout="this.style.background='linear-gradient(to right, #d182a3, #94bbe9)'">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
                Submit Registration
              </button>
            </div>
          </div>
        </div>
      </section>
    </form>

    <!-- Footer -->
    <footer class="text-center mt-8 animate-fade-in" style="animation-delay: 0.6s">
      <div class="bg-white/50 backdrop-blur-sm rounded-xl p-4 border border-white/30">
        <p class="text-gray-600 text-sm">
          Need help? <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">Contact Support</a> | 
          <a href="/responses" class="text-purple-600 hover:text-purple-800 font-medium">View All Responses</a>
        </p>
      </div>
    </footer>
  </div>

  <script>
    function validateField(fieldName) {
      const field = document.getElementById(fieldName);
      const errorDiv = document.getElementById(fieldName + 'Error');
      const value = field.value.trim();

      if (fieldName === 'firstName' || fieldName === 'lastName') {
        if (value === '') {
          showError(errorDiv, 'This field is required');
        } else if (value.length < 2) {
          showError(errorDiv, 'Must be at least 2 characters');
        } else {
          hideError(errorDiv);
        }
      } else if (fieldName === 'email') {
        if (value === '') {
          showError(errorDiv, 'Email is required');
        } else if (!value.includes('@') || !value.includes('.')) {
          showError(errorDiv, 'Please enter a valid email address');
        } else {
          hideError(errorDiv);
        }
      }
    }

    function showError(errorDiv, message) {
      errorDiv.textContent = message;
      errorDiv.style.display = 'block';
    }

    function hideError(errorDiv) {
      errorDiv.style.display = 'none';
    }

    function checkPasswordStrength() {
      const password = document.getElementById('password').value;
      const meterDiv = document.getElementById('passwordMeter');
      const strengthBar = document.getElementById('strengthBar');
      const strengthText = document.getElementById('strengthText');
      const errorDiv = document.getElementById('passwordError');

      if (password.length === 0) {
        meterDiv.style.display = 'none';
        hideError(errorDiv);
        return;
      }

      meterDiv.style.display = 'block';

      let score = 0;
      let errors = [];

      // Check requirements
      if (password.length >= 8) score++; else errors.push('At least 8 characters');
      if (/[A-Z]/.test(password)) score++; else errors.push('One uppercase letter');
      if (/[a-z]/.test(password)) score++; else errors.push('One lowercase letter');
      if (/[0-9]/.test(password)) score++; else errors.push('One number');
      if (/[@#$%^&*!]/.test(password)) score++; else errors.push('One special character (@#$%^&*!)');

      // Update strength meter
      if (score <= 2) {
        strengthBar.style.width = '33%';
        strengthBar.style.backgroundColor = '#ef4444';
        strengthText.textContent = 'Weak';
        strengthText.className = 'text-sm font-medium text-red-500';
      } else if (score <= 4) {
        strengthBar.style.width = '66%';
        strengthBar.style.backgroundColor = '#f59e0b';
        strengthText.textContent = 'Medium';
        strengthText.className = 'text-sm font-medium text-yellow-500';
      } else {
        strengthBar.style.width = '100%';
        strengthBar.style.backgroundColor = '#10b981';
        strengthText.textContent = 'Strong';
        strengthText.className = 'text-sm font-medium text-green-500';
      }

      // Show errors if any
      if (errors.length > 0) {
        showError(errorDiv, 'Missing: ' + errors.join(', '));
      } else {
        hideError(errorDiv);
      }

      checkPasswordMatch();
    }

    function checkPasswordMatch() {
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      const errorDiv = document.getElementById('confirmPasswordError');

      if (confirmPassword === '') {
        hideError(errorDiv);
        return;
      }

      if (password !== confirmPassword) {
        showError(errorDiv, 'Passwords do not match');
      } else {
        hideError(errorDiv);
      }
    }

    function resetForm() {
      if (confirm('Are you sure you want to reset the form? All data will be lost.')) {
        document.querySelector('form').reset();
        document.getElementById('passwordMeter').style.display = 'none';
        hideError(document.getElementById('passwordError'));
        hideError(document.getElementById('confirmPasswordError'));
        hideError(document.getElementById('firstNameError'));
        hideError(document.getElementById('lastNameError'));
        hideError(document.getElementById('emailError'));
      }
    }

    function validateForm() {
      let firstName = document.getElementById("firstName").value.trim();
      let lastName = document.getElementById("lastName").value.trim();
      let email = document.getElementById("email").value.trim();
      let password = document.getElementById("password").value;
      let confirmPassword = document.getElementById("confirmPassword").value;
      let department = document.getElementById("department").value;
      let message = document.getElementById("message").value.trim();
      let agree = document.getElementById("agree").checked;

      if (!firstName || !lastName || !email || !password || !confirmPassword || !department || !message) {
        alert("All required fields must be filled out!");
        return false;
      }

      if (!email.includes("@")) {
        alert("Please enter a valid email address!");
        return false;
      }

      // Password strength validation
      if (password.length < 8 || !/[A-Z]/.test(password) || !/[a-z]/.test(password) || !/[0-9]/.test(password) || !/[@#$%^&*!]/.test(password)) {
        alert("Password does not meet the strength requirements!");
        return false;
      }

      if (password !== confirmPassword) {
        alert("Passwords do not match!");
        return false;
      }

      if (!agree) {
        alert("You must agree to the terms and conditions!");
        return false;
      }

      return true;
    }

    // Add loading state to submit button
    document.querySelector('form').addEventListener('submit', function(e) {
      if (validateForm()) {
        const submitBtn = document.querySelector('button[type="submit"]');
        submitBtn.innerHTML = '<svg class="animate-spin w-4 h-4 inline mr-2" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Processing...';
        submitBtn.disabled = true;
      }
    });
  </script>
</body>
</html>
