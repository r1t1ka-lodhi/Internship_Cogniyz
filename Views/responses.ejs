<!DOCTYPE html>
<html>
<head>
    <title>Form Responses</title>
    <link rel="stylesheet" href="/output.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Inter:wght@400;500;600&family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        @keyframes slideInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-slide-up { animation: slideInUp 0.6s ease-out; }
    </style>
</head>
<body class="min-h-screen py-8 px-4" style="font-family: 'Inter', sans-serif; background: radial-gradient(circle, rgba(209, 130, 163, 1) 23%, rgba(148, 187, 233, 1) 100%);">
    <div class="max-w-4xl mx-auto">
        <div class="bg-gray-100/60 shadow-xl border border-white/60 animate-slide-up p-6 rounded-lg">
            <!-- Header Section -->
            <div class="bg-white/70 p-6 sm:p-8 rounded-lg shadow-sm mb-4">
                <div class="flex items-center justify-between mb-4">
                    <a href="/" class="inline-flex items-center text-white no-underline py-3 px-6 rounded-xl transition-all duration-300 hover:-translate-y-0.5" style="background: #94bbe9; font-family: 'Inter', sans-serif;" onmouseover="this.style.background='#7ba8e0'" onmouseout="this.style.background='#94bbe9'">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to Form
                    </a>
                </div>
                <div class="text-center">
                    <h1 class="text-3xl sm:text-4xl font-bold mb-2" style="font-family: 'Dancing Script', cursive; background: linear-gradient(to right, #d182a3, #94bbe9); -webkit-background-clip: text; background-clip: text; color: transparent; letter-spacing: 2px;">Form Responses</h1>
                    <p class="text-gray-600 text-sm sm:text-base">View and manage all submitted forms</p>
                    <div class="w-24 h-1 mx-auto mt-4 rounded-full" style="background: linear-gradient(to right, #d182a3, #94bbe9);"></div>
                </div>
            </div>

            <!-- Responses Section -->
            <div class="bg-white/70 p-6 sm:p-8 rounded-lg shadow-sm">
                <% if (responses.length === 0) { %>
                    <div class="text-center py-12">
                        <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <h3 class="text-xl font-semibold text-gray-600 mb-2">No Responses Yet</h3>
                        <p class="text-gray-500">No form submissions have been received yet.</p>
                    </div>
                <% } else { %>
                    <div class="space-y-4">
                        <% responses.forEach((response, index) => { %>
                            <div class="bg-white rounded-xl p-6 shadow-md border-l-4 hover:shadow-lg transition-shadow duration-200" style="border-left-color: #d182a3;">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                    <div class="space-y-2">
                                        <p class="text-sm text-gray-600"><span class="font-semibold text-gray-800">Name:</span> <%= response.name %></p>
                                        <p class="text-sm text-gray-600"><span class="font-semibold text-gray-800">Email:</span> <%= response.email %></p>
                                    </div>
                                    <div class="space-y-2">
                                        <p class="text-sm text-gray-600"><span class="font-semibold text-gray-800">Department:</span> <%= response.department %></p>
                                        <p class="text-sm text-gray-600"><span class="font-semibold text-gray-800">Gender:</span> <%= response.gender %></p>
                                    </div>
                                </div>
                                <% if (response.message) { %>
                                    <div class="mt-4 p-3 bg-gray-50 rounded-lg">
                                        <p class="text-sm text-gray-600"><span class="font-semibold text-gray-800">Message:</span></p>
                                        <p class="text-sm text-gray-700 mt-1"><%= response.message %></p>
                                    </div>
                                <% } %>
                                <div class="mt-4 flex justify-end">
                                    <form method="POST" action="/delete/<%= index %>" class="inline">
                                        <button type="submit" class="text-white border-0 py-2 px-4 rounded-lg cursor-pointer text-sm transition-all duration-200 hover:shadow-md" style="background: #d182a3; font-family: 'Inter', sans-serif;" onmouseover="this.style.background='#c16d92'" onmouseout="this.style.background='#d182a3'" onclick="return confirm('Are you sure you want to delete this response?')">
                                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                            </svg>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>